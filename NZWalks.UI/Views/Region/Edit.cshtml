@model NZWalks.UI.Models.Dto.RegionDto

<h1 class="mt-3">Eidt Region</h1>

@if(Model is not null)
{
    <form method="post">

        <div class="mt-3">
            <label class="from-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly/>
        </div>
        <div class="mt-3">
            <label class="from-label">Code</label>
            <input type="text" class="form-control" asp-for="Code" />
        </div>
        <div class="mt-3">
            <label class="from-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="from-label">Image URL</label>
            <input type="text" class="form-control" asp-for="RegionImageUrl" />
        </div>
        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" asp-controller="Region" asp-action="Delete" class="btn btn-outline-danger">Delete</button>
        </div>
    </form>

}
